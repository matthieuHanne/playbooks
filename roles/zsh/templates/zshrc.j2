# Path to your oh-my-zsh configuration.
ZSH=$HOME/.oh-my-zsh

# For Solarized
export TERM="xterm-256color"


# Look in ~/.oh-my-zsh/themes/
ZSH_THEME="ys"

alias zshcg="vim /vagrant/roles/zsh/templates/zshrc.j2"
alias vimcg="vim /vagrant/roles/vim/templates/vimrc.j2"
alias vagrantcg="vim /vagrant/roles/vim/templates/vimrc.j2"
alias nginxcg="sudo vim /vagrant/roles/nginx/templates/nginx.j2"
alias sshconfig="sudo vim /etc/ssh/ssh_config"
alias sshdconfig="sudo vim /etc/ssh/sshd_config"
alias xresconfig="vim ~/.Xresources"

DISABLE_CORRECTION="true"
COMPLETION_WAITING_DOTS="true"

# Which plugins would you like to load? (plugins can be found in ~/.oh-my-zsh/plugins/*)
# Custom plugins may be added to ~/.oh-my-zsh/custom/plugins/
plugins=(git z)

source $ZSH/oh-my-zsh.sh

# Customize to your needs...
export PATH=$PATH:/usr/local/sbin:/usr/local/bin:/usr/bin:/usr/bin/core_perl:$HOME/bin
